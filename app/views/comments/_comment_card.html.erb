<% if comment.has_best_answer == true %>
  <div class="card callout-coral mt-3">
<% else %>
  <div class="card callout-dark mt-3">
<% end %>

  <div class="card-body">
<!-- body -->
    <div class="row">
      <div class="col-9">
        <span class="card-text mt-3">
          <%= simple_format(comment.comment) %>
        </span>
      </div>

      <div class="col-3">
        <% if comment.has_best_answer == true %>
          <span class="badge badge-primary align-middle" style="background-color:#ff7f50;">
            Best answer
          </span>
        <% end %>
      </div>
    </div>
<!-- buttones -->
    <div class="row px-3 mt-1">
      <small class="text-muted mr-auto">
        <%= comment.created_at.strftime('%Y/%m/%d %H:%M') %>
      </small>

        <%= link_to team_user_path(team, comment.user) do %>
          <%= attachment_image_tag comment.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "noimage.jpg", size: "30x30", class:"rounded-circle" %>
          <%= comment.user.name %>
        <% end %>

        <% if issue.has_settled == false && issue.user == current_user && action_name == 'show' %>
          <%= link_to edit_team_issue_path(team, issue), class: "btn btn-outline-success btn-sm mx-1" do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to team_issue_path(team, issue), method: :delete, data: { confirm: "will you delete it?"}, class: "btn btn-outline-danger btn-sm" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
    </div>

  </div>
</div>
