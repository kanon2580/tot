<% @page_title = 'Sign up' %>

<div class="row d-flex">
  <div class="offset-2 col-8">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.hidden_field :email, value: "trial@mail" %>
      <%= f.hidden_field :password, value: "trialuser" %>
      <%= f.submit "Signin as a trial user", class:"btn btn-dark btn-block offset-2 col-8 my-5" %>
    <% end %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <p class="headline mt-5">Name</p>
      <div class="form-group">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control offset-1 col-10" %>
      </div>

      <p class="headline mt-5">Mail</p>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control offset-1 col-10" %>
      </div>

      <p class="headline mt-5">
        Password
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </p>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control offset-1 col-10" %>
      </div>

      <p class="headline mt-5">Password confirmation</p>
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control offset-1 col-10" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"btn btn-danger btn-block offset-2 col-8 my-5" %>
      </div>
    <% end %>
  </div>

</div>
