<%= form_with model: [team, issue] do |f| %>

  <p class="headline pb-2">タグ</p>
  <p class="mb-3">
    <span class="rounded border border-dark bg-dark text-white px-1">選択済み</span>
    <span class="rounded border border-dark px-1">未選択</span>
  </p>
  <div class="form-group checkboxes">
    <%= f.collection_check_boxes :tag_ids, team.tags, :id, :name, include_hidden: false do |tag| %>
      <%= tag.check_box %>
      <%= tag.label %>
    <% end %>
  </div>
  <div class="row flex-column align-items-end">
    <%= link_to "タグ新規作成", team_tags_path(team), class:"btn btn-danger btn-sm" %>
    <small class="text-muted">※別画面に遷移します</small>
  </div>

  <p class="headline mt-5">タイトル</p>
  <div class="form-group">
    <%= f.text_field :title, class:"form-control offset-1 col-10" %>
  </div>

  <p class="headline mt-5">本文</p>
  <div class="form-group">
    <%= f.text_area :body, class:"form-control offset-1 col-10" %>
  </div>

  <div class="row flex-column align-items-center mt-5">
    <span class="titlemark"><%= flash[:error] %></span>
  </div>

  <% if action_name == 'new' %>
    <%= f.submit "新規作成", class:"btn btn-dark btn-dark offset-2 col-8" %>
  <% elsif action_name == 'edit' %>
    <%= f.submit "更新", class:"btn btn-dark btn-dark offset-2 col-8" %>
  <% end %>
<% end %>