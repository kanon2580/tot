<div class="col-12">
  <div class="issue-index">

    <div class="card">
      <div class="card-body p-2">

        <strong class="card-title">
          <%= link_to issue.title, team_issue_path(team, issue) %> 
        </strong>

          <div class="row">
            <div class="offset-1 col-9">
              <h6 class="card-subtitle my-2">
                <% issue.tags.each do |tag| %>
                  <%= link_to tag.name, team_tag_issues_path(team, tag), class:"btn btn-sm btn-dark py-0" %>
                <% end %>
              </h6>
            </div>

            <div class="col-2">
              <%= link_to team_user_path(team, issue.user) do %>
                <%= attachment_image_tag issue.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "noimage.jpg", size:"30x30", class:"rounded-circle" %>
                <%= issue.user.name %>
              <% end %>
            </div>
          </div>

      </div>
    </div>

  <div>
</div>