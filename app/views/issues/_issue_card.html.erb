<div class="card w-70">
  <div class="card-body">

    <h3 class="card-title headline">
      <%= issue.title %>
      <% if issue.likes_by?(current_user) %>
        <%= link_to "★", team_issue_likes_path, method: :delete, class: "text-warning float-right" %>
      <% else %>
        <%= link_to "☆",team_issue_likes_path, method: :post, class: "text-warning float-right"  %>
      <% end %>  
    </h3>

    <h6 class="card-subtitle mb-2 text-muted">
      <% issue.tags.each do |tag| %>
        <%= link_to tag.name, team_tag_issues_path(team, tag), class: "btn btn-outline-dark btn-sm" %>
      <% end %>
    </h6>

    <p class="card-text"><%= issue.body %></p>
    <%= link_to team_user_path(team, issue.user) do %>
      <%= attachment_image_tag issue.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "noimage.jpg", size: "30x30" %>
      <%= issue.user.name %>
    <% end %>

    <% unless issue.has_settled == true %>
    <div class="float-right">
      <%= link_to "edit", edit_team_issue_path(team, issue), class: "btn btn-outline-success btn-sm" %>
      <%= link_to "delete", team_issue_path(team, issue), method: :delete, data: { confirm: "will you delete it?"}, class: "btn btn-outline-danger btn-sm" %>
    </div>
    <% end %>
  </div>
</div>