<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <div class="container">
    <%= image_tag 'logo-white.png', width: '50', class:"navbar-brand" %>

    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navber" aria-controls="Navber" aria-expanded="false">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="Navber">
      <div class="navbar-nav">
        <% if user_signed_in? && @team.present? %>
          <a href="#" class="nav-link dropdown-toggle h3" role="button" data-toggle="dropdown" id="navbarDropdownMenuLink" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-flag"></i>
            <%= @team.name %>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <%= link_to team_issues_path(@team), class:"dropdown-item" do %>
              <i class="fas fa-clipboard-list"></i>
              Issues
            <% end %>

            <%= link_to team_tags_path(@team), class:"dropdown-item" do %>
              <i class="fas fa-tags"></i>
              Tags
            <% end %>

            <%= link_to team_users_path(@team), class:"dropdown-item" do %>
              <i class="fas fa-users"></i>
              Users
            <% end %>

            <%= link_to mypage_path(current_user), class:"dropdown-item" do %>
              <i class="fas fa-running"></i>
              Leave team
            <% end %>
          </div>

          <%= link_to new_team_issue_path(@team), class:"nav-link" do %>
            <i class="fas fa-plus-circle"></i>
            New issue
          <% end %>

          <%= link_to team_user_path(@team, current_user), class:"nav-link" do %>
            <i class="fas fa-id-card"></i>
            My page
          <% end %>

          <%= link_to destroy_user_session_path, method: :delete, class:"nav-link" do %>
            <i class="fas fa-sign-out-alt"></i>
            Sign out
          <% end %>

        <% elsif user_signed_in? %>
          <%= link_to mypage_path(current_user), class:"nav-link" do %>
            <i class="fas fa-id-card"></i>
            My page
          <% end %>

          <%= link_to destroy_user_session_path, method: :delete, class:"nav-link" do %>
            <i class="fas fa-sign-out-alt"></i>
            Sign out
          <% end %>

        <% else %>
          <%= link_to root_path, class: "nav-link" do %>
            <i class="fas fa-home"></i>
            Home
          <% end %>

          <%= link_to new_user_session_path, class: "nav-link" do %>
            <i class="fas fa-sign-in-alt"></i>
            Sign in
          <% end %>

          <%= link_to new_user_registration_path, class: "nav-link" do %>
            <i class="fas fa-user-plus"></i>
            Sign up
          <% end %>
        <% end %>
      </div>
    </div>

  </div>
</nav>