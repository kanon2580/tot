<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <div class="container">
    <%= image_tag 'logo-white.png', width: '50', class:"navbar-brand" %>

    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navber" aria-controls="Navber" aria-expanded="false">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="Navber">
      <div class="navbar-nav">
        <% if user_signed_in? && @team.present? %>
          <span class="text-white small align-self-start">You are in ...</span>

          <a href="#" class="nav-link dropdown-toggle h3" role="button" data-toggle="dropdown" id="navbarDropdownMenuLink" aria-haspopup="true" aria-expanded="false">
            <%= @team.name %>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <%= link_to "Top", team_path, class:"dropdown-item" %>
            <%= link_to "Issues", team_issues_path(@team), class:"dropdown-item" %>
            <%= link_to "Tags", team_tags_path(@team), class:"dropdown-item" %>
            <%= link_to "Users", team_users_path(@team), class:"dropdown-item" %>
          </div>

          <%= link_to "New issue", new_team_issue_path(@team), class:"nav-link" %>
          <%= link_to "My page", team_user_path(@team, current_user), class:"nav-link" %>
          <%= link_to "Leave team", mypage_path(current_user), class:"nav-link" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"nav-link" %>

        <% elsif user_signed_in? %>
          <%= link_to "Join team", new_team_member_path, class:"nav-link" %>
          <%= link_to "My page", mypage_path(current_user), class:"nav-link" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"nav-link" %>
        <% else %>
          <%= link_to "Home", root_path, class: "nav-link" %>
          <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        <% end %>
      </div>
    </div>

  </div>
</nav>