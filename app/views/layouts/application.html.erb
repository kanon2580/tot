<!DOCTYPE html>
<html>
  <head>
    <title>Tot</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <%= link_to "logout", destroy_user_session_path, method: :delete %>  
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
