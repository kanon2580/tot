<%= form_with url: team_tags_search_path(team), method: :get, local: true do |f| %>
  <div class="row input-group">
    <%= f.text_field :q, placeholder: "Enter search word.", autofocus: true, class:"form-control col-10" %>
    <div class="input-group-append">
      <%= f.submit "Search", class:"btn btn-danger" %>
    </div>
  </div>
<% end %>
<div class="row justify-content-end">
  <%= link_to "Delete search conditions", team_tags_path(team), class:"mr-3" %>
</div>