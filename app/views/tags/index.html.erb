<div class="row flex-column align-items-center my-5">
  <h1 class="titlemark">・</h1>
  <h3>Tags</h3>
  <h1 class="titlemark">・</h1>
</div>

<div class="row">
  <div class="offset-1 col-6">
    <%= form_with url: team_tags_search_path(@team), method: :get, local: true do |f| %>
      <%= f.text_field :q, placeholder: "検索ワードを入力" %>
      <%= f.submit "検索" %>
    <% end %>
    <%= link_to "検索条件を削除", team_tags_path(@team), class:"btn btn-sm btn-dark" %>

    <p class="headline">一覧</p>
    <% @tags.each do |tag| %>
      <%= link_to tag.name, team_tag_issues_path(@team, tag), class:"btn btn-sm btn-dark m-2 py-0" %>
    <% end %>
  </div>

  <div class="col-4">
    <%= form_with model: @new_tag, url: team_tags_path do |f| %>

      <p class="headline">新しいタグ</p>
      <div class="input-group offset-1 col-10">
        <%= f.text_field :name, placeholder: "Tag name", autofocus: true, class:"form-control", aria_describedby:"button-addon2" %>
        <div class="input-group-append">
        <%= f.submit "作成", class:"btn btn-dark", id:"button-addon2" %>
        </div>
      </div>
    <% end %>
  </div>

</div>
