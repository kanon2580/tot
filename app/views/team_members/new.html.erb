<div class="row flex-column align-items-center my-5">
  <h1 class="titlemark">・</h1>
  <h3>Join team</h3>
  <h1 class="titlemark">・</h1>
</div>

<div class="row mt-5">
  <div class="offset-3 col-6">

    <%= flash[:error] %>

    <%= form_with model: TeamMember.new do |f| %>
      <div class="form-group">
        <%= f.text_field :team_name, placeholder: "Team name", class: "form-control" %>
        <div class="row flex-column align-items-center mt-3">
          <%= f.submit "Join team !", class: "btn btn-dark" %>
        </div>
      </div>
    <% end %>

  </div>
</div>
