<div class="container">
  <div class="row flex-column align-items-center">
    <h1 class="titlemark mb-5">Team</h1>
  </div>

  <div class="row">
    <div class="offset-1 col-10">
      <%= render 'issues/issues', team: @team, issues: @issues %>
    </div>
  </div>

  <div class="row">
    <div class="offset-1 col-4">
      <%= render 'tags/tags', tags: @tags %>
    </div>

    <div class="col-6">
      <%= render 'users/members', team_members: @team_members %>
    </div>
  </div>

</div>
