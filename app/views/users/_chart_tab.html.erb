<div class="row mt-5 px-5">
  <div class="col-12 offset-md-1 col-md-10">

    <ul id="chartTab" class="nav nav-tabs" role="tablist">
      <li class="nav-item">
        <a href="#questioner" id="questioner-tab" class="nav-link active" role="tab" data-toggle="tab" aria-controls="questioner" aria-selected="true">
          Questioner
        </a>
      </li>
      <li class="nav-item">
        <a href="#answerer" id="answerer-tab" class="nav-link" role="tab" data-toggle="tab" aria-controls="answerer" aria-selected="false">
          Answerer
        </a>
      </li>
    </ul>

    <div id="chartTabContent" class="tab-content mt-3">
      <div id="questioner" class="tab-pane active" role="tabpanel" aria-labelledby="questioner-tab">
        <%= render 'users/questioner_tab' %>
      </div>

      <div id="answerer" class="tab-pane" role="tabpanel" aria-labelledby="answerer-tab">
        <%= render 'users/answerer_tab' %>
      </div>
    </div>

    <div class="row flex-column align-items-end">
      <%= link_to root_path(anchor: "criteria") do %>
        <i class="far fa-question-circle"></i>
         About evaluation criteria
      <% end %>
    </div>

  </div>
</div>

<%= Gon::Base.render_data %>
<%= javascript_include_tag 'tab_charts', 'data-turbolinks-track': 'reload' %>
