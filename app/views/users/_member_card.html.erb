<div class="card">
  <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "noimage.jpg", class: "card-img-top " %>
  <div class="card-body">
    <h5 class="card-title"><%= link_to user.name, team_mypage_path(team, user) %></h5>

    <div class="d-flex justify-content-end">
      <%= link_to user_issues_path(user), class:"text-dark" do %>
        <i class="fas fa-pen-fancy"></i><%= team.issues.where(user_id: user).count %>
      <% end %>
      <%= link_to user_comments_path(user), class:"text-dark ml-2" do %>
        <i class="fas fa-comment"></i><%= team.issues.map{|issue| issue.comments.where(user_id: user).count}.sum %>
      <% end %>
    </div>

  </div>
</div>

