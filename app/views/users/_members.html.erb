<div class="row flex-column align-items-center">
  <h3 class="headline">Members</h3>
</div>

<div class="row">
  <% team_members.each do |team_member| %>
    <div class="offset-1 mt-3">
      <%= link_to team_user_path(user_id: team_member.user.id) do %>
        <%= attachment_image_tag team_member.user, :profile_image, :fill, 120, 120, format: 'jpeg', fallback: "noimage.jpg", size: "120x120" %><br>
        <%= team_member.user.name %>
      <% end %>
    </div>
  <% end %>
</div>