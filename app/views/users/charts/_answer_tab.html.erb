<div class="row">
  <div class="col-3">
    <div class="nav flex-column nav-pills" id="answer-tab" role="tablist" aria-orientation="vertical"><%# 回答者 %>
      <a class="nav-link active" id="response-tab" data-toggle="pill" href="#response" aria-controls="response" aria-selected="true">返信速度</a>
      <a class="nav-link" id="required-time-tab" data-toggle="pill" href="#required-time" aria-controls="required-time" aria-selected="false">所要時間</a>
      <a class="nav-link" id="best-answer-tab" data-toggle="pill" href="#best-answer" aria-controls="best-answer" aria-selected="false">ベストアンサー</a>
      <a class="nav-link" id="comment-tags-tab" data-toggle="pill" href="#comment-tags" aria-controls="comment-tags" aria-selected="false">タグ</a>
    </div>
  </div>

  <div class="col-9">
    <div class="tab-content" id="answer-tabContent"><%# 回答者 %>
      <div class="tab-pane fade show active" id="response" aria-labelledby="response-tab">
        <canvas id="responseChart" style="height:100%;"></canvas>
        <%= render 'users/charts/response_chart' %>
      </div>

      <div class="tab-pane fade" id="required-time" aria-labelledby="required-time-tab">
        <canvas id="requiredTimeChart"></canvas>
        <%= render 'users/charts/required_time_chart' %>
      </div>

      <div class="tab-pane fade" id="best-answer" aria-labelledby="best-answer-tab">
        <canvas id="bestAnswerChart"></canvas>
        <%= render 'users/charts/best_answer_chart' %>
      </div>

      <div class="tab-pane fade" id="comment-tags" aria-labelledby="comment-tags-tab">
        <canvas id="commentTagsChart"></canvas>
        <%= render 'users/charts/comment_tags_chart' %>
      </div>
    </div>
  </div>
</div>
