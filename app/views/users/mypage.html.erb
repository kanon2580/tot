<div class="row">
  <div class="offset-1 col-10">
    <p class="headline">Teams</p>

    <div class="row">
      <div class="col-12 col-md-8 px-5">
        <% @teams.each do |team| %>
          <%= link_to team_path(team), class:"h4" do %>
            <div class="mr-auto my-1">
              <i class="fas fa-flag"></i>
              <%= team.name %>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="col-12 mt-5 col-md-4 mt-md-0">
        <span class="titlemark">
          <%= flash[:error] %>
        </span>

        <%= form_with model: @new_team_mamber, url: join_team_path do |f| %>
          <div class="form-group">
            <%= f.text_field :team_name, placeholder: "Team name", class:"form-control offset-1 col-10" %>
            <%= f.text_field :team_id, placeholder: "Team id", class:"form-control offset-1 col-10 mt-3" %>
            <div class="row flex-column align-items-center mt-3">
              <%= f.submit "Join team !", class:"btn btn-sm btn-dark" %>
            </div>
          </div>
        <% end %>

        <div class="row flex-column align-items-end">
          <%= link_to root_path(anchor: 'about') do %>
            <i class="far fa-question-circle"></i>
            Which team can you join?
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>

<div class="row mt-5">
  <div class="offset-1 col-10">
    <p class="headline">Profile</p>

    <div class="row mt-5 px-5">
      <div class="col-xs-12 offset-md-1 col-md-4">
        <%= render 'users/profile_card', team: @team, user: @user %>
      </div>

      <div class="col-12 col-md-7 mt-5">
        <%= render 'charts/total_chart' %>
      </div>
    </div>
  </div>
</div>
